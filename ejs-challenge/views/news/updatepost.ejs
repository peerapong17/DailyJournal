<div class="container">
<%- include('../partials/header') -%>
  <h1 class="mt-4">Compose</h1>
<form action="/news/edit/<%= Items._id %>?_method=PATCH" method="POST">
  <div class="form-group">
    <label for="title">Title</label>
    <input
      name="title"
      type="text"
      class="form-control"
      id="title"
      autofocus
      autocomplete="off"
      value="<%= Items.title %>"
    />
  </div>
  <div class="form-group">
    <label for="content">Content</label>
    <textarea
      name="content"
      class="form-control"
      type="textarea"
      id="content"
      rows="3"
      value="<%= Items.content %>"
    >
<%= Items.content %></textarea
    >
  </div>
  <div class="form-group">
    <label for="">Date</label>
    <input type="date" name="date" value="<%= Items.date %>" class="form-control">
  </div>
  <div class="form-group">
    <label for="exampleFormControlSelect1">Example select</label>
    <select name="category" class="form-control" id="exampleFormControlSelect1">
      <% categories.map(category=>{ %>
      <option value="<%= category %>" <%= Items.category === category ? "selected" : null %> ><%= category %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="title">Image link</label>
    <input
      name="image"
      type="text"
      class="form-control"
      id="title"
      autocomplete="off"
      value="<%= Items.image %>"
    />
  </div>
  <button type="submit" class="btn btn-warning btn-lg btn-block">Edit</button>
  <a
    href="/"
    class="btn btn-primary btn-lg btn-block"
    role="button"
    aria-pressed="true"
    >Back</a
  >
</form>
</div>
<%- include('../partials/footer') -%>
